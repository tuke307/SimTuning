<views:MvxWpfView
    x:Class="SimTuning.Forms.WPFCore.Views.Dyno.DynoMainView"
    x:TypeArguments="viewModels:DynoMainViewModel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:MvvmCross.Platforms.Wpf.Views;assembly=MvvmCross.Platforms.Wpf"
    xmlns:region="clr-namespace:SimTuning.Forms.WPFCore.Region"
    xmlns:viewModels="clr-namespace:SimTuning.Forms.WPFCore.ViewModels.Dyno"
    mc:Ignorable="d"
                   d:DesignHeight="600"
                   d:DesignWidth="1024"
                   MinHeight="600"
                   MinWidth="1024"
                   Background="{DynamicResource MaterialDesignPaper}">
    <Grid>
        <dragablz:TabablzControl region:MvxContainer.Id="DynoRegion"
                                 SelectedIndex="{Binding Mode=TwoWay, Path=DynoTabIndex}">
            <dragablz:TabablzControl.InterTabController>
                <dragablz:InterTabController />
            </dragablz:TabablzControl.InterTabController>
        </dragablz:TabablzControl>
    </Grid>
</views:MvxWpfView>