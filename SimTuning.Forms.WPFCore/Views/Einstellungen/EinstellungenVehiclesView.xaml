                                                         Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.HubraumV, UpdateSourceTrigger=LostFocus, StringFormat={}{##.##}}"
                                                         behaviours:NumberOnlyBehaviour.IsEnabled="True"
                                                         MinWidth="200">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="TextChanged">
                                                            <i:InvokeCommandAction Command="{Binding ShowSaveButtonCommand}" />
                                                        </i:EventTrigger>
