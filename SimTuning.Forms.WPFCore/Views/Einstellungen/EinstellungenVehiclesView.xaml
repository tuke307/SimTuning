                                                  SelectedItem="{Binding UnitAnsaugleitungL}"
                                                  ItemsSource="{Binding Path=LengthQuantityUnits, Mode=OneTime}">
                                        </ComboBox>
                                    </StackPanel>
                                </StackPanel>
                            </TreeViewItem>
