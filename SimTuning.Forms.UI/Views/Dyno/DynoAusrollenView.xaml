<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage BackgroundColor="{DynamicResource MaterialDesignPaper}"
                      xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                      xmlns:oxy="clr-namespace:OxyPlot.Xamarin.Forms;assembly=OxyPlot.Xamarin.Forms"
                      xmlns:viewModels="clr-namespace:SimTuning.Forms.UI.ViewModels.Dyno"
                      xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
                      x:TypeArguments="viewModels:DynoAusrollenViewModel"
                      x:Class="SimTuning.Forms.UI.Views.Dyno.DynoAusrollenView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <material:MaterialCard   Margin="10"
                                 Grid.Row="0">
            <StackLayout>
                <material:MaterialIconButton Margin="5"
                                             ButtonType="Elevated"
                                             HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Image="ic_refresh_black_18dp"
                                             Command="{Binding RefreshPlotCommand}" />
            </StackLayout>
        </material:MaterialCard>

        <material:MaterialCard   Margin="10"
                                 Grid.Row="1">
            <StackLayout>
                <material:MaterialLabel Text="Ausroll-Experiment"
                                        FontSize="Medium"
                                        FontAttributes="Bold" />

                <BoxView Color="{DynamicResource MaterialDesignDivider}"
                         HeightRequest="2"
                         HorizontalOptions="Fill"
                         Margin="0, 0, 0, 5" />

                <oxy:PlotView Model="{Binding Mode=OneWay, Path=PlotAusrollen}"
                              HeightRequest="400" />
            </StackLayout>
        </material:MaterialCard>

        <material:MaterialIconButton WidthRequest="75"
                                     HeightRequest="50"
                                     Margin="15"
                                     Grid.Row="2"
                                     ButtonType="Elevated"
                                     HorizontalOptions="End"
                                     VerticalOptions="Center"
                                     Image="ic_play_arrow_black_18dp"
                                     Command="{Binding ShowDiagnosisCommand}" />
    </Grid>
</views:MvxContentPage>