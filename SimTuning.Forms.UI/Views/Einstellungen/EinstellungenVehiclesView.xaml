<views:MvxContentPage  xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                       x:Class="SimTuning.Forms.UI.Views.Einstellungen.EinstellungenVehiclesView"
                       xmlns="http://xamarin.com/schemas/2014/forms"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       x:TypeArguments="viewModels:EinstellungenVehiclesViewModel"
                       xmlns:viewModels="clr-namespace:SimTuning.Forms.UI.ViewModels.Einstellungen"
                       xmlns:material="clr-namespace:XF.Material.Forms.UI;assembly=XF.Material"
                       xmlns:expandable="clr-namespace:Expandable;assembly=ExpandableView"
                       BackgroundColor="{DynamicResource MaterialDesignPaper}">
    <ScrollView>
        <StackLayout>

            <Frame Margin="10"
                   VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <material:MaterialLabel Text="Auswahl"
                                            FontSize="Medium"
                                            FontAttributes="Bold" />

                    <BoxView Color="Gray"
                             HeightRequest="2"
                             HorizontalOptions="Fill"
                             Margin="0, 0, 0, 5" />

                    <ListView HeightRequest="200"
                              ItemsSource="{Binding Vehicles}"
                              SelectedItem="{Binding Mode=TwoWay, Path=Vehicle}"
                              RowHeight="40">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <material:MaterialLabel Text="{Binding Name}"
                                                                FontAttributes="Bold"
                                                                Margin="0, 0, 0, -5" />
                                        <material:MaterialLabel Text="{Binding Beschreibung}" />
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="Center"
                                 Margin="5, 0, 0, 0">
                        <material:MaterialButton ImageSource="ic_add_circle_outline_black_18dp.png"
                                                 Command="{Binding NewVehicleCommand}">
                        </material:MaterialButton>

                        <material:MaterialButton ImageSource="ic_remove_circle_outline_black_18dp.png"
                                                 Command="{Binding DeleteVehicleCommand}">
                        </material:MaterialButton>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame Margin="10">
                <StackLayout>
                    <material:MaterialLabel Text="Daten"
                                            FontSize="Medium"
                                            FontAttributes="Bold" />
                    <BoxView Color="Gray"
                             HeightRequest="2"
                             HorizontalOptions="Fill"
                             Margin="0, 0, 0, 5" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0">
                            <material:MaterialTextField Placeholder="Name"
                                                        Text="{Binding Mode=TwoWay, Path=Vehicle.Name}"
                                                        Margin="5">
                                <!--<i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding ShowSaveButtonCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>-->
                            </material:MaterialTextField>

                            <material:MaterialTextField Placeholder="Beschreibung"
                                                        Text="{Binding Mode=TwoWay, Path=Vehicle.Beschreibung}"
                                                        Margin="5">
                                <!--<i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction Command="{Binding ShowSaveButtonCommand}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>-->
                            </material:MaterialTextField>
                        </StackLayout>

                        <material:MaterialButton Grid.Column="1"
                                                 Margin="15"
                                                 VerticalOptions="Center"
                                                 HorizontalOptions="Center"
                                                 ImageSource="ic_save_black_18dp.png"
                                                 IsEnabled="{Binding Mode=OneWay, Path=SaveButton}"
                                                 Command="{Binding SaveVehicleCommand}"
                                                 WidthRequest="200"
                                                 HeightRequest="60">
                        </material:MaterialButton>
                    </Grid>

                    <!--Allgemein-->
                    <expandable:ExpandableView>
                        <expandable:ExpandableView.PrimaryView>
