                        Height="17"
                        Width="17" />
                </Button>-->

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Einlass-Fläche"
                             behaviours:NumberOnlyBehaviour.IsEnabled="True"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Mode=TwoWay, Path=EinlassA, UpdateSourceTrigger=PropertyChanged, StringFormat={}{##.##}}"
                             MinWidth="150">
                    </TextBox>

                    <ComboBox VerticalAlignment="Bottom"
                              Margin="5 0 0 0"
                              IsEditable="False"
                              DisplayMemberPath="Abbreviation"
                              SelectedItem="{Binding UnitEinlassA}"
                              ItemsSource="{Binding Path=AreaQuantityUnits, Mode=OneTime}">
                    </ComboBox>

                    <!--<TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        mm²
                    </TextBlock>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Einlass-Steuerwinkel"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Mode=TwoWay, Path=Einlasssteuerwinkel, UpdateSourceTrigger=PropertyChanged, StringFormat={}{##.##}}"
                             behaviours:NumberOnlyBehaviour.IsEnabled="True"
                             MinWidth="150">
                    </TextBox>

                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        <Run>°KW</Run>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="2"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Resonanzdrehzahl"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Mode=TwoWay, Path=Resonanzdrehzahl, UpdateSourceTrigger=PropertyChanged, StringFormat={}{##.##}}"
                             behaviours:NumberOnlyBehaviour.IsEnabled="True"
                             MinWidth="150">
                    </TextBox>

                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        <Run>1/min</Run>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="3"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Kurbelgehäusevolumen"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Mode=TwoWay, Path=KurbelgehauseV, UpdateSourceTrigger=PropertyChanged, StringFormat={}{##.##}}"
                             behaviours:NumberOnlyBehaviour.IsEnabled="True"
                             MinWidth="150">
                    </TextBox>

                    <ComboBox VerticalAlignment="Bottom"
                              Margin="5 0 0 0"
                              IsSynchronizedWithCurrentItem="True"
                              IsEditable="False"
                              DisplayMemberPath="Abbreviation"
                              SelectedItem="{Binding UnitKurbelgehauseV}"
                              ItemsSource="{Binding Path=VolumeQuantityUnits, Mode=OneTime}">
                    </ComboBox>

                    <!-- Input -->
                    <!--<NormalizingUnitTextBox NormalizedValue="{Binding NormalizedValue}"
                                            Units="{Binding Units}"
                                            Width="180" />-->
                    <!--<TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        cm³
                    </TextBlock>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Ansaugleitungsdurchmesser"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             Text="{Binding Mode=TwoWay, Path=AnsaugleitungD, UpdateSourceTrigger=PropertyChanged, StringFormat={}{##.##}}"
                             behaviours:NumberOnlyBehaviour.IsEnabled="True"
                             MinWidth="150">
                    </TextBox>

                    <ComboBox VerticalAlignment="Bottom"
                              Margin="5 0 0 0"
                              IsSynchronizedWithCurrentItem="True"
                              IsEditable="False"
                              DisplayMemberPath="Abbreviation"
                              SelectedItem="{Binding UnitAnsaugleitungsD}"
                              ItemsSource="{Binding Path=LengthQuantityUnits, Mode=OneTime}">
                    </ComboBox>
                    <!--<TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        cm
                    </TextBlock>-->
                </StackPanel>

                <StackPanel Orientation="Horizontal"
                            Grid.RowSpan="5"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="50 0 0 0">
                    <TextBox materialDesign:HintAssist.Hint="Einlass-Resonanzlänge"
                             materialDesign:HintAssist.FloatingScale="1.1"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             IsEnabled="False"
                             Text="{Binding Mode=TwoWay, Path=Resonanzlaenge}"
                             MinWidth="150">
                    </TextBox>

                    <ComboBox VerticalAlignment="Bottom"
                              Margin="5 0 0 0"
                              IsSynchronizedWithCurrentItem="True"
                              IsEditable="False"
                              DisplayMemberPath="Abbreviation"
                              SelectedItem="{Binding UnitResonanzlaenge}"
                              ItemsSource="{Binding Path=LengthQuantityUnits, Mode=OneTime}">
                    </ComboBox>
                    <!--<TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Margin="5 0 0 0">
                        cm
                    </TextBlock>-->
                </StackPanel>
            </Grid>
        </GroupBox>

        <!--Hilfe-->
        <GroupBox Margin="10,10,10,10"
                  Grid.RowSpan="2"
                  Grid.Column="1"
                  Header="Hilfe"
                  VerticalAlignment="Center"
                  MinHeight="200">
            <StackPanel>
                <ComboBox VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          materialDesign:HintAssist.Hint="Fahrzeug"
                          IsEditable="False"
                          SelectedItem="{Binding  HelperVehicle}"
                          ItemsSource="{Binding  HelperVehicles}"
                          DisplayMemberPath="Name"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        Einlass-Fläche
                    </Label>

                    <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding Mode=OneWay, Path= HelperVehicle.Motor.Einlass.Flaeche}"
                             IsEnabled="False" />

                    <Label Grid.Row="0"
                           Grid.Column="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        mm²
                    </Label>

                    <Label Grid.Row="1"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        Einlass Steuerwinkel
                    </Label>

                    <TextBox  Grid.Row="1"
                              Grid.Column="1"
                              Text="{Binding Mode=TwoWay, Path= HelperVehicle.Motor.Einlass.SteuerzeitSZ}"
                              IsEnabled="False" />

                    <Label Grid.Row="1"
                           Grid.Column="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        °KW
                    </Label>

                    <Label Grid.Row="2"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        Resonanzdrehzahl
                    </Label>

                    <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding Mode=TwoWay, Path= HelperVehicle.Motor.ResonanzU}"
                             IsEnabled="False" />

                    <Label Grid.Row="2"
                           Grid.Column="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        1/min
                    </Label>

                    <Label Grid.Row="3"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        Kurbelgehäuse
                    </Label>

                    <TextBox  Grid.Row="3"
                              Grid.Column="1"
                              Text="{Binding Mode=TwoWay, Path= HelperVehicle.Motor.KurbelgehaeuseV}"
                              IsEnabled="False" />

                    <Label  Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Left"
                            Margin="5 0 0 0">
                        mm³
                    </Label>

                    <Label Grid.Row="4"
                           Grid.Column="0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Margin="5 0 0 0">
                        Ansaugleitungslänge
                    </Label>

                    <TextBox  Grid.Row="4"
                              Grid.Column="1"
                              Text="{Binding Mode=TwoWay, Path= HelperVehicle.Ansaugleitungslaenge}"
                              IsEnabled="False" />

                    <Label Grid.Row="4"
                           Grid.Column="2"
                           HorizontalAlignment="Left"
                           Margin="5 0 0 0">
                        cm
                    </Label>
                </Grid>

                <Button Content="{materialDesign:PackIcon ChevronRightCircleOutline}"
                        Command="{Binding InsertDataCommand}"
                        ToolTip="einfügen"
                        HorizontalAlignment="Center"
                        Width="60"
                        Margin="15" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>