                                 IsEnabled="False"
                                 Grid.Column="1" />
                        <TextBox Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.Auslass.SteuerzeitSZ}"
                                 Grid.Row="1"
                                 IsEnabled="False"
                                 Grid.Column="1" />
                        <TextBox Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.ResonanzU}"
                                 Grid.Row="2"
                                 IsEnabled="False"
                                 Grid.Column="1" />

                        <Label Content="mm²"
                               Grid.Row="0"
                               Grid.Column="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontWeight="Normal" />

                        <Label Content="°KW"
                               Grid.Row="1"
                               Grid.Column="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontWeight="Normal" />

                        <Label Content="1/min"
                               Grid.Row="2"
                               Grid.Column="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               FontWeight="Normal" />
                    </Grid>

                    <Button Content="{materialDesign:PackIcon ChevronRightCircleOutline}"
                            Command="{Binding InsertDataCommand}"
                            ToolTip="einfügen"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="15"
                            Width="60" />
                </StackPanel>
            </GroupBox>
        </Grid>
    </ScrollViewer>
