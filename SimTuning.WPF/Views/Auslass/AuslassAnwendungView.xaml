                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="10">
                            <TextBox materialDesign:HintAssist.Hint="D3"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.MittelteilD}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="10">
                            <TextBox materialDesign:HintAssist.Hint="LM"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.MittelteilL}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    Grid.Column="4"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="10">
                            <TextBox materialDesign:HintAssist.Hint="D4"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.GegenkonusD}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="10">
                            <TextBox materialDesign:HintAssist.Hint="LG"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.GegenkonusL}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="5"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="10">
                            <TextBox materialDesign:HintAssist.Hint="LE"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.EndrohrL}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="0"
                                    Grid.Column="6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="50 10 10 10">
                            <TextBox materialDesign:HintAssist.Hint="Gesamtlänge"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.GesamtL}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    Grid.Row="1"
                                    Grid.Column="6"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Left"
                                    Margin="50 10 10 10">
                            <TextBox materialDesign:HintAssist.Hint="Resonanzlänge"
                                     IsEnabled="False"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     Text="{Binding Mode=TwoWay, Path=Vehicle.Motor.Auslass.Auspuff.ResonanzL}"
                                     Width="105" />

                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="5 0 0 0"><Run Text="mm" /></TextBlock>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Vorschau"
                          Margin="10"
                          Grid.Row="1">
                    <Grid VerticalAlignment="Stretch"
                          HorizontalAlignment="Stretch">
                        <Image Stretch="Fill"
                               Height="250"
                               Source="{Binding Auspuff, Mode=OneWay}" />
                    </Grid>
                </GroupBox>
            </Grid>

            <GroupBox Header="Hilfe"
                      Margin="10"
                      Grid.Column="3"
                      VerticalAlignment="Center">
                <StackPanel>

                    <ComboBox VerticalAlignment="Center"
                              HorizontalAlignment="Center"
                              materialDesign:HintAssist.Hint="Fahrzeug"
                              IsEditable="False"
                              SelectedItem="{Binding HelperVehicle}"
                              ItemsSource="{Binding HelperVehicles}"
                              DisplayMemberPath="Name"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="Auslass-Fläche"
