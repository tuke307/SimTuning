<ContentPage x:Class="SimTuning.Maui.UI.Views.Einlass.EinlassMainView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:tabs="http://sharpnado.com"
             xmlns:local="clr-namespace:SimTuning.Maui.UI.Views.Einlass"
             xmlns:vm="clr-namespace:SimTuning.Core.ViewModels.Einlass;assembly=SimTuning.Core"
             x:DataType="vm:MainViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  swipable views  -->
        <tabs:TabHostView Grid.Row="0"
                          Style="{StaticResource TabHostViewStyle}"
                          SelectedIndex="{Binding Source={x:Reference Switcher}, Path=SelectedIndex, Mode=TwoWay}">
            <tabs:TabHostView.Tabs>
                <tabs:UnderlinedTabItem Style="{StaticResource SegmentedTabStyle}"
                                        Label="Kanal" />
                <tabs:UnderlinedTabItem Style="{StaticResource SegmentedTabStyle}"
                                        Label="Vergaser" />
            </tabs:TabHostView.Tabs>
        </tabs:TabHostView>

        <tabs:ViewSwitcher x:Name="Switcher"
                           Grid.Row="1"
                           Animate="True"
                           SelectedIndex="{Binding EinlassTabIndex, Mode=TwoWay}">
            <!--<customViews:DelayedView x:TypeArguments="local:EinlassKanalView" />
            <customViews:LazyView x:TypeArguments="local:EinlassVergaserView" />-->
            <local:EinlassKanalView />
            <local:EinlassVergaserView />
        </tabs:ViewSwitcher>
    </Grid>
</ContentPage>