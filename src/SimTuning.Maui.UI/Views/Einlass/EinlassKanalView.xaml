<ContentView x:Class="SimTuning.Maui.UI.Views.Einlass.EinlassKanalView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SimTuning.Maui.UI.ViewModels"
             x:DataType="vm:EinlassKanalViewModel">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <!--  Einlass Resonanzlänge  -->
            <Border Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0"
                          Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Column="0"
                               Style="{StaticResource LabelTitleStyle}"
                               Text="Einlass-Resonanzlänge" />

                        <Button Grid.Column="1"
                                Margin="10"
                                Clicked="Button_Clicked"
                                HeightRequest="70"
                                HorizontalOptions="Center"
                                ImageSource="{StaticResource IconHelpCircleOutlineMedium}" />
                    </Grid>

                    <BoxView Grid.Row="1"
                             Grid.ColumnSpan="2"
                             Style="{StaticResource DividerBoxViewStyle}" />

                    <!--Einlass-Fläche-->
                    <Entry Grid.Row="2"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           Placeholder="Einlass-Fläche"
                           Text="{Binding Mode=TwoWay, Path=VehicleMotorEinlassFlaecheA}"
                           WidthRequest="250" />

                    <Picker Grid.Row="2"
                            Grid.Column="1"
                            ItemsSource="{Binding Path=AreaQuantityUnits, Mode=OneTime}"
                            ItemDisplayBinding="{Binding Abbreviation}"
                            SelectedItem="{Binding VehicleMotorEinlassFlaecheAUnit}" />

                    <!--Einlass-Steuerwinkel-->
                    <Entry Grid.Row="3"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           Placeholder="Einlass-Steuerwinkel"
                           Text="{Binding Mode=TwoWay, Path=Einlasssteuerwinkel}"
                           WidthRequest="250" />

                    <Label Grid.Row="3"
                           Grid.Column="1"
                           VerticalOptions="Center">
                        °KW
                    </Label>

                    <!--Resonanzdrehzahl-->
                    <Entry Grid.Row="4"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           Placeholder="Resonanzdrehzahl"
                           Text="{Binding Mode=TwoWay, Path=VehicleMotorResonanzU}"
                           WidthRequest="250" />

                    <Label Grid.Row="4"
                           Grid.Column="1"
                           Margin="5,0,0,0"
                           VerticalOptions="Center">
                        1/min
                    </Label>

                    <!--Kurbelgehäusevolumen-->
                    <Entry Grid.Row="5"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           Placeholder="Kurbelgehäusevolumen"
                           Text="{Binding Mode=TwoWay, Path=VehicleMotorKurbelgehaeuseV}"
                           WidthRequest="250" />

                    <Picker Grid.Row="5"
                            Grid.Column="1"
                            ItemsSource="{Binding Path=VolumeQuantityUnits, Mode=OneTime}"
                            ItemDisplayBinding="{Binding Abbreviation}"
                            SelectedItem="{Binding VehicleMotorKurbelgehaeuseVUnit}" />

                    <!--Ansaugleitung-->
                    <Entry Grid.Row="6"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           Placeholder="Ø Ansaugleitung"
                           Text="{Binding Mode=TwoWay, Path=VehicleMotorEinlassDurchmesserD}"
                           WidthRequest="250" />

                    <Picker Grid.Row="6"
                            Grid.Column="1"
                            ItemsSource="{Binding Path=LengthQuantityUnits, Mode=OneTime}"
                            ItemDisplayBinding="{Binding Abbreviation}"
                            SelectedItem="{Binding VehicleMotorEinlassDurchmesserDUnit}" />

                    <!--Einlass-Resonanzlänge-->
                    <Entry Grid.Row="7"
                           Grid.Column="0"
                           Keyboard="Numeric"
                           IsEnabled="False"
                           Placeholder="Einlass-Resonanzlänge"
                           Text="{Binding Mode=TwoWay, Path=Resonanzlaenge}"
                           WidthRequest="250" />

                    <Picker Grid.Row="7"
                            Grid.Column="1"
                            ItemsSource="{Binding Path=LengthQuantityUnits, Mode=OneTime}"
                            ItemDisplayBinding="{Binding Abbreviation}"
                            SelectedItem="{Binding ResonanzlaengeUnit}" />
                </Grid>
            </Border>

            <!--  Hilfe  -->
            <Border Grid.Row="1">
                <StackLayout>
                    <Label Style="{StaticResource LabelTitleStyle}"
                           Text="Hilfe" />

                    <BoxView Style="{StaticResource DividerBoxViewStyle}" />

                    <Picker ItemsSource="{Binding HelperVehicles, Mode=OneTime}"
                            ItemDisplayBinding="{Binding Name}"
                            Title="Fahrzeug"
                            SelectedItem="{Binding HelperVehicle}" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0"
                               Grid.Column="0"
                               Text="Einlass-Fläche"
                               VerticalOptions="Center" />
                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Text="Einlass Steuerwinkel"
                               VerticalOptions="Center" />
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Text="Resonanzdrehzahl"
                               VerticalOptions="Center" />
                        <Label Grid.Row="3"
                               Grid.Column="0"
                               Text="Volumen Kurbelgehäuse"
                               VerticalOptions="Center" />
                        <Label Grid.Row="4"
                               Grid.Column="0"
                               Text="Ansaugleitungslänge"
                               VerticalOptions="Center" />

                        <StackLayout Grid.Row="0"
                                     Grid.Column="1"
                                     Orientation="Horizontal">
                            <Entry Margin="10,0,0,0"
                                   Keyboard="Numeric"
                                   IsEnabled="False"
                                   Placeholder=" "
                                   Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.Einlass.FlaecheA}"
                                   WidthRequest="100" />

                            <Label Margin="5,0,0,0"
                                   VerticalOptions="Center">
                                mm²
                            </Label>
                        </StackLayout>

                        <StackLayout Grid.Row="1"
                                     Grid.Column="1"
                                     Orientation="Horizontal">
                            <Entry Margin="10,0,0,0"
                                   Keyboard="Numeric"
                                   IsEnabled="False"
                                   Placeholder=" "
                                   Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.Einlass.SteuerzeitSZ}"
                                   WidthRequest="100" />

                            <Label Margin="5,0,0,0"
                                   VerticalOptions="Center">
                                °KW
                            </Label>
                        </StackLayout>

                        <StackLayout Grid.Row="2"
                                     Grid.Column="1"
                                     Orientation="Horizontal">

                            <Entry Margin="10,0,0,0"
                                   Keyboard="Numeric"
                                   IsEnabled="False"
                                   Placeholder=" "
                                   Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.ResonanzU}"
                                   WidthRequest="100" />

                            <Label Margin="5,0,0,0"
                                   VerticalOptions="Center">
                                1/min
                            </Label>
                        </StackLayout>

                        <StackLayout Grid.Row="3"
                                     Grid.Column="1"
                                     Orientation="Horizontal">

                            <Entry Margin="10,0,0,0"
                                   Keyboard="Numeric"
                                   IsEnabled="False"
                                   Placeholder=" "
                                   Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.KurbelgehaeuseV}"
                                   WidthRequest="100" />

                            <Label Margin="5,0,0,0"
                                   VerticalOptions="Center">
                                mm³
                            </Label>
                        </StackLayout>

                        <StackLayout Grid.Row="4"
                                     Grid.Column="1"
                                     Orientation="Horizontal">

                            <Entry Margin="10,0,0,0"
                                   Keyboard="Numeric"
                                   IsEnabled="False"
                                   Placeholder=" "
                                   Text="{Binding Mode=OneWay, Path=HelperVehicle.Motor.Einlass.DurchmesserD}"
                                   WidthRequest="100" />

                            <Label Margin="5,0,0,0"
                                   VerticalOptions="Center">
                                mm
                            </Label>
                        </StackLayout>
                    </Grid>

                    <Button Margin="10"
                            Command="{Binding InsertDataCommand}"
                            HeightRequest="70"
                            HorizontalOptions="Center"
                            ImageSource="{StaticResource IconChevronRightMedium}"
                            WidthRequest="100" />
                </StackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentView>