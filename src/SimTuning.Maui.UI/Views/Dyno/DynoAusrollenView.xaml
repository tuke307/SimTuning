<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Auswertung-Ausrollen"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="SimTuning.Maui.UI.Views.Dyno.DynoAusrollenView"
             xmlns:vm="clr-namespace:SimTuning.Maui.UI.ViewModels.Dyno"
             x:DataType="vm:AusrollenViewModel">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Border Margin="10"
                Grid.Row="0">
            <StackLayout>
                <ImageButton Margin="5"
                             HorizontalOptions="FillAndExpand"
                             VerticalOptions="Center"
                             Source="{StaticResource IconRefreshMedium}"
                             Command="{Binding RefreshPlotCommand}" />
            </StackLayout>
        </Border>

        <Border Margin="10"
                Grid.Row="1"
                VerticalOptions="FillAndExpand">
            <StackLayout>
                <Label Text="Ausroll-Experiment"
                       FontSize="Medium"
                       FontAttributes="Bold" />

                <BoxView />

                <lvc:CartesianChart Series="{Binding Mode=OneWay, Path=PlotAusrollen}"
                                    HeightRequest="400" />
            </StackLayout>
        </Border>

        <Button 
                Margin="15"
                Grid.Row="2"
                HorizontalOptions="End"
                VerticalOptions="Center"
                ImageSource="{StaticResource IconChevronRightMedium}"
                Command="{Binding ShowDiagnosisCommand}" />
    </Grid>
</ContentPage>