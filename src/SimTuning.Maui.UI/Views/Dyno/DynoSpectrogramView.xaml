                                    Command="{Binding RefreshSpectrogramCommand}"
                                    ToolTip="Aktualisiere das Spectrogram mit den vorgenommen Änderungen">
                            </Button>
                        </materialDesign:Badged>-->

                        <Button HorizontalOptions="Center"
                                WidthRequest="90"
                                ImageSource="{StaticResource IconRefreshMedium}"
                                Command="{Binding RefreshSpectrogramCommand}"
                                CommandParameter="false">
                        </Button>
                    </StackLayout>
                </Border>

                <!--1. Group box Plot-->
                <Border Margin="10">
                    <StackLayout>
                        <Label Text="Graph"
                               FontSize="Medium"
                               FontAttributes="Bold" />

                        <BoxView Style="{StaticResource DividerBoxViewStyle}" />

                        <lvc:CartesianChart Series="{Binding Mode=OneWay, Path=PlotAudio}"
                                            HeightRequest="400" />
                    </StackLayout>
                </Border>

                <!--Graph-Einstellungen-->
                <Border Margin="10">
                    <StackLayout>
                        <Label Text="Graph-Einstellungen"
                               FontSize="Medium"
                               FontAttributes="Bold" />

                        <BoxView Style="{StaticResource DividerBoxViewStyle}" />

                        <!--Intensität-->
                        <Picker Title="Intensität"
                                ItemsSource="{Binding Mode=OneTime, Path=Intensitys}"
                                SelectedItem="{Binding Mode=TwoWay, Path=Intensity}">
                        </Picker>

                        <!--Filter-->
                        <Button WidthRequest="90"
                                ImageSource="{StaticResource IconFilterMedium}"
                                Command="{Binding FilterPlotCommand}" />

                        <!--Refresh-->
                        <Button WidthRequest="90"
                                ImageSource="{StaticResource IconRefreshMedium}"
                                Command="{Binding RefreshPlotCommand}">
                        </Button>

                        <!--Filter Intensität-->
                        <Slider Minimum="0"
                                Maximum="25"
                                Value="{Binding Mode=TwoWay, Path=FilterValue}"
                                VerticalOptions="CenterAndExpand" />

                        <!--Graph-->
                        <Picker Title="Graphauswahl"
                                ItemsSource="{Binding Mode=OneWay, Path=Graphs}"
                                SelectedItem="{Binding Mode=TwoWay, Path=Graph}"
                                ItemDisplayBinding="{Binding Name}">
                            <!--<Entry.Behaviors>
                            <behavior:EventToCommandBehavior EventName="ChoiceSelected"
                                                             Command="{Binding SpecificGraphCommand}" />
                        </Entry.Behaviors>-->
                        </Picker>
                    </StackLayout>
                </Border>

                <ImageButton WidthRequest="100"
                             HeightRequest="60"
                             Margin="15"
                             HorizontalOptions="End"
                             VerticalOptions="Center"
                             Source="{StaticResource IconChevronRightMedium}"
                             Command="{Binding ShowBeschleunigungCommand}" />
            </StackLayout>
