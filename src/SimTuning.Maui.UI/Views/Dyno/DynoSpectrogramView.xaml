                <Border Margin="10">
                    <StackLayout>
                        <Label Text="Spectrogram"
                               FontSize="Medium"
                               FontAttributes="Bold" />

                        <BoxView Style="{StaticResource DividerBoxViewStyle}" />

                        <Image Source="{Binding Mode=OneWay, Path=DisplayedImage}"
                               HeightRequest="350"
                               Aspect="Fill"
                               VerticalOptions="FillAndExpand"
                               HorizontalOptions="FillAndExpand">
                        </Image>
                    </StackLayout>
                </Border>

                <!--EINSTELLUNGEN-->
                <Border Margin="10">
                    <StackLayout>
                        <Label Text="Spectrogram-Einstellungen"
                               FontSize="Medium"
                               FontAttributes="Bold" />

                        <BoxView Style="{StaticResource DividerBoxViewStyle}" />

                        <!--Colormap-->
                        <Picker Title="Colormap"
                                ItemsSource="{Binding Mode=OneTime, Path=Colormaps}"
                                SelectedItem="{Binding Mode=TwoWay, Path=Colormap}">
                        </Picker>

                        <!--Intensität-->
                        <Picker Title="Intensität"
                                ItemsSource="{Binding Mode=OneTime, Path=Intensitys}"
                                SelectedItem="{Binding Mode=TwoWay, Path=Intensity}">
                        </Picker>

                        <!--Auflösungsqualität-->
                        <Picker Title="Qualität"
                                ItemsSource="{Binding Mode=OneTime, Path=Qualitys}"
                                SelectedItem="{Binding Mode=TwoWay, Path=Quality}">
                        </Picker>

                        <!--Frequenzbereich-->
                        <StackLayout Margin="0, 10, 0, 0">
                            <Label>
                                Drehzahl
                            </Label>

                            <StackLayout Orientation="Horizontal">
                                <Entry Text="{Binding Mode=TwoWay, Path=Frequenzbeginn}"
                                       Placeholder="von"
                                       WidthRequest="100"
                                       Keyboard="Numeric" />
                                <Label Text="-"
                                       Margin="10, 0, 10, 0"
                                       VerticalOptions="Center" />
                                <Entry Text="{Binding Mode=TwoWay, Path=Frequenzende}"
                                       Placeholder="bis"
                                       WidthRequest="100"
                                       Keyboard="Numeric" />
                            </StackLayout>
                        </StackLayout>

                        <!--Refresh-->
                        <!--<materialDesign:Badged Grid.Row="5"
                                               Visibility="{Binding Badge_Refresh}"
