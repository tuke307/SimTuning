<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Style="{StaticResource ContentPageStyle}"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Allgemein"
             x:Class="SimTuning.Maui.UI.Views.Einstellungen.EinstellungenApplicationView"
             xmlns:vm="clr-namespace:SimTuning.Core.ViewModels.Einstellungen;assembly=SimTuning.Core"
             x:DataType="vm:ApplicationViewModel">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.25*" />
            <ColumnDefinition Width="0.20*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label VerticalOptions="Center"
               Text="Runden beim Einheiten Wechsel" />

        <CheckBox Grid.Column="1"
                  Style="{StaticResource CheckBoxStyle}"
                  VerticalOptions="Center"
                  Margin="10"
                  IsChecked="{Binding Path=RoundOnUnitChange, Mode=TwoWay}" />

        <Entry  Grid.Row="1"
                Grid.ColumnSpan="2"
                IsEnabled="{Binding Path=RoundOnUnitChange, Mode=OneWay}"
                Text="{Binding Path=RoundingAccuracy, Mode=TwoWay}"
                Placeholder="Kommastellen" />
    </Grid>
</ContentPage>