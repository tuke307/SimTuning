<ContentPage x:Class="SimTuning.Maui.UI.Views.Einstellungen.EinstellungenVehiclesView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SimTuning.Maui.UI.Behaviors"
             xmlns:customcomponents="clr-namespace:SimTuning.Maui.UI.Components"
             Title="Fahrzeuge"
             xmlns:vm="clr-namespace:SimTuning.Maui.UI.ViewModels.Einstellungen"
             x:DataType="vm:VehiclesViewModel">
    <ScrollView>
        <StackLayout>

            <Frame Margin="10"
                   VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <Label Style="{StaticResource LabelTitleStyle}"
                           Text="Auswahl" />

                    <BoxView />

                    <ListView HeightRequest="200"
                              ItemsSource="{Binding Vehicles}"
                              SelectedItem="{Binding Mode=TwoWay, Path=Vehicle}"
                              RowHeight="50">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <customcomponents:CustomViewCell SelectedBackgroundColor="{DynamicResource DesignSelection}">
                                    <StackLayout>
                                        <Label Text="{Binding VehicleName}"
                                               FontAttributes="Bold"
                                               Margin="0, 0, 0, -5" />
                                        <Label Text="{Binding VehicleBeschreibung}" />
                                    </StackLayout>
                                </customcomponents:CustomViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Grid Margin="5, 0, 0, 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="1"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="50"
                                ImageSource="{StaticResource IconAddCircleOutlineMedium}"
                                Command="{Binding NewVehicleCommand}">
                        </Button>

                        <Button Grid.Column="2"
                                VerticalOptions="CenterAndExpand"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="50"
                                ImageSource="{StaticResource IconDeleteCircleOutlineMedium}"
                                Command="{Binding DeleteVehicleCommand}">
                        </Button>
                    </Grid>
                </StackLayout>
            </Frame>

            <Frame Margin="10">
                <StackLayout>
                    <Label Style="{StaticResource LabelTitleStyle}"
                           Text="Daten" />

                    <BoxView />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackLayout Grid.Column="0">
                            <Entry Placeholder="Name"
                                   Text="{Binding Mode=TwoWay, Path=VehicleName}"
                                   Margin="5">
                            </Entry>

                            <Editor Placeholder="Beschreibung"
                                    Text="{Binding Mode=TwoWay, Path=VehicleBeschreibung}"
                                    Margin="5"
                                    HeightRequest="150">
                            </Editor>
                            <!--<Entry Placeholder="Beschreibung"
                                                        Text="{Binding Mode=TwoWay, Path=VehicleBeschreibung}"
                                                        Margin="5">
                            </Entry>-->
                        </StackLayout>

                        <Button Grid.Column="1"
                                Margin="15"
                                VerticalOptions="Center"
                                HorizontalOptions="FillAndExpand"
                                HeightRequest="60"
                                ImageSource="{StaticResource IconContentSaveMedium}"
                                Command="{Binding SaveVehicleCommand}">
                        </Button>
                    </Grid>

