    <Style x:Key="DividerBoxViewStyle"
           TargetType="BoxView">
        <Setter Property="HorizontalOptions"
                Value="FillAndExpand" />
        <Setter Property="Margin"
                Value="0, 0, 0, 5" />
        <Setter Property="HeightRequest"
                Value="2" />
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource DesignDividerLight}, Dark={StaticResource DesignDividerDark}}" />
    </Style>
</ResourceDictionary>