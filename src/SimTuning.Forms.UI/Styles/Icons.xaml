    </ResourceDictionary.MergedDictionaries>

    <OnPlatform x:Key="MaterialDesign"
                x:TypeArguments="x:String">
        <OnPlatform.Platforms>
            <On Platform="Android"
                Value="MaterialIcons-Regular.ttf#Material Design Icons" />
            <!--<On Platform="iOS"
                Value="Material Design Icons" />
            <On Platform="UWP"
                Value="Assets/Fonts/MaterialIcons-Regular.ttf#Material Design Icons" />-->
        </OnPlatform.Platforms>
    </OnPlatform>

    <x:Double x:Key="SizeSmallIcon">15</x:Double>
    <x:Double x:Key="SizeMediumIcon">30</x:Double>
    <x:Double x:Key="SizeLargeIcon">90</x:Double>

